<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="invoice_form_add_discount" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
			

            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[1]/group[1]/field[@name='amount_untaxed']" position="before" >
                    <field name="discount" />
                    <field name="discount_acc_id"/>
                </xpath>

            </field>
            <field name="arch" type="xml">
              <xpath expr="/form/sheet/notebook/page[1]/group[1]/field[@name='residual']" position="after" >
                <field name="amount_before_payment" />
                <field name="amount_paid" />
                <field name="amount_outstanding" />
                <!--<field name="total_outstanding_balance"/>-->
              </xpath>
            </field>

            <!--<field>-->
                <!--<xpath expr="/form/notebook/page/group/field[@name='tax_line']" position="replace">-->
             <!--</xpath>-->
            <!--</field>-->
        </record>
    </data>
</openerp>