<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.filters" id="stock_prouduction_lot_expired">
            <field name="name">Already expired</field>
            <field name="model_id">stock.production.lot</field>
            <field name="domain">[['life_date', '&lt;', context_today().strftime('%Y-%m-%d')]]</field>
        </record>
        <record model="ir.filters" id="stock_prouduction_lot_soon_to_expire">
            <field name="name">Soon to be Expired</field>
            <field name="model_id">stock.production.lot</field>
            <field name="domain">[['life_date', '&lt;', (context_today() + datetime.timedelta(30)).strftime('%Y-%m-%d')]]</field>
        </record>
    </data>
</openerp>