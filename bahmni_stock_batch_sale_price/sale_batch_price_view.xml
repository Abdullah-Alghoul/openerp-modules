<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="sale_form_add_batch_price" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>

            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after" >
                    <field name="batch_name" readonly="1"/>
                    <field name="batch_id" invisible="True"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree//field[@name='product_uom']" position="replace" >
                    <field  name="product_uom" groups="product.group_uom" class="oe_inline oe_no_button" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>